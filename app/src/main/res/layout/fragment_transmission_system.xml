<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/engineStarts"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:weightSum="1">

                <Switch
                    android:id="@+id/tsautomaticgearbox_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Is Automatic gearbox change smooth?"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/laymountings"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:weightSum="1">

                <Switch
                    android:id="@+id/tstorqueconverter_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Any evidence of torque converter spin?"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layvalvemech"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:weightSum="1">

                <Switch
                    android:id="@+id/tsgearsynchromesh_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Is manual gear synchromesh smooth?"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/laydrivebelts"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:weightSum="1">

                <Switch
                    android:id="@+id/tsgearjump_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Does any gear jump out of mesh?"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoilleaks"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:weightSum="1">

                <Switch
                    android:id="@+id/tsclutchslip_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Is there clutch slip?"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layrpm"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:weightSum="1">

                <Switch
                    android:id="@+id/tsgearboxmounting_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Are gearbox mountings worn out?"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/laynoiseinengine"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:weightSum="1">

                <Switch
                    android:id="@+id/tsdriveshaftcvjointwornout_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Are drive shaft cv joints worn out?"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/laywaterpump"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:weightSum="1">

                <Switch
                    android:id="@+id/tsoilleaks_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Are there any fluid/oil leaks?"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/lay2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:weightSum="1">

                <Switch
                    android:id="@+id/tspropeliershaftbent_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Is propelier shaft bent or wobbling?"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/lay3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:weightSum="1">

                <Switch
                    android:id="@+id/tsdifferentialunity_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Is differential unity noisy?"
                    android:textOff="OFF"
                    android:textOn="ON" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/lay4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_weight="0.5">

                    <EditText
                        android:id="@+id/tsinput_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:maxLines="4"
                        android:lines="4"
                        android:hint="Comments on Transmission System"
                        android:inputType="text"
                        android:textSize="13dp" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <Button
                    android:id="@+id/tsbuttonBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Back"></Button>

                <Button
                    android:id="@+id/tsbuttonNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="Next"></Button>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>